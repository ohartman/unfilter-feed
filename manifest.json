{
  "manifest_version": 3,
  "name": "The Reddit Robocop",
  "version": "1.0.0",
  "description": "Detect AI-generated content on Reddit. Serve the public trust. Protect the innocent. Uphold the authenticity.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.reddit.com/*",
    "https://old.reddit.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "The Reddit Robocop"
  }
}
